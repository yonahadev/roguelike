{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "shared/*": ["shared/*"]
    }
  },
  "include": [
    "client/**/*.ts",
    "shared/**/*.ts",
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
